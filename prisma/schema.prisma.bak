generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model School {
  id           String    @id @default(uuid())
  email        String    @unique
  passwordHash String
  name         String?   // Teacher Name
  schoolName   String    @default("مدرسة الريّان للقرآن الكريم")
  phone        String?
  address      String?
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  students     Student[]
}

model Student {
  id            String    @id @default(uuid())
  firstName     String
  lastName      String
  
  // Relations
  schoolId      String
  school        School    @relation(fields: [schoolId], references: [id])
  
  phone         String?
  fatherPhone   String?
  birthDate     DateTime?
  dateOfJoining DateTime  @default(now())
  
  // Quran Progress
  currentHizb    Int       @default(0) // 1 to 60
  currentQuarter Int       @default(0) // 1 to 8 (or 1 to 4 depending on system, assuming 1/4 of Hizb, so 0-3?) Usually 1 hizb = 8 thomons or 4 quarters. Let's start with basic int.
  
  // Status
  isFrozen      Boolean   @default(false)
  
  // Tracking - Raw
  attendance    Attendance[]
  presentations Presentation[]
  deductions    Deduction[]
  notes         Note[]

  // Tracking - Aggregated
  weeklyEvaluations   WeeklyEvaluation[]
  monthlyEvaluations  MonthlyEvaluation[]
  // yearlyEvaluations   YearlyEvaluation[]
  
  // Current Stats (Cached for Dashboard)
  totalPoints       Int       @default(0)
  currentWeeklyPoints Int     @default(0)
  currentWeeklyRating Float   @default(0)
  currentStars      Int       @default(0)
  
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model WeeklyEvaluation {
  id          String    @id @default(uuid())
  studentId   String
  student     Student   @relation(fields: [studentId], references: [id], onDelete: Cascade)
  
  weekStartDate DateTime // Match with start of week (Saturday)
  
  attendancePoints  Int @default(0)
  presentationPoints Int @default(0)
  deductionPoints   Int @default(0)
  
  totalPoints       Int @default(0) // Max 15 usually
  rating            Float @default(0) // Scale to 10
  stars             Int @default(0)
  
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@unique([studentId, weekStartDate])
}

model MonthlyEvaluation {
  id          String    @id @default(uuid())
  studentId   String
  student     Student   @relation(fields: [studentId], references: [id], onDelete: Cascade)
  
  month       Int       // 1-12
  year        Int
  
  totalPoints       Int @default(0)
  rating            Float @default(0)
  stars             Int @default(0)
  
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@unique([studentId, month, year])
}

