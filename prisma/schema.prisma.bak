enum Period {
  MORNING
  EVENING
}

enum AttendanceStatus {
  PRESENT
  ABSENT
}

model Attendance {
  id        String           @id @default(uuid())
  studentId String
  student   Student          @relation(fields: [studentId], references: [id], onDelete: Cascade)
  
  date      DateTime         // We will store the date part mostly
  period    Period
  status    AttendanceStatus @default(PRESENT)
  
  createdAt DateTime         @default(now())

  @@unique([studentId, date, period]) // Prevent duplicate attendance for same slot
}

model Presentation {
  id        String   @id @default(uuid())
  studentId String
  student   Student  @relation(fields: [studentId], references: [id], onDelete: Cascade)
  
  date      DateTime
  surah     String?
  hizb      Int?     // The hizb they recited
  quarter   Int?     // The quarter they recited
  grade     String?  // Optional: A, B, C or 10/10
  
  createdAt DateTime @default(now())
}

model Deduction {
  id        String   @id @default(uuid())
  studentId String
  student   Student  @relation(fields: [studentId], references: [id], onDelete: Cascade)
  
  points    Int
  reason    String
  date      DateTime @default(now())
}

model Note {
  id        String   @id @default(uuid())
  studentId String
  student   Student  @relation(fields: [studentId], references: [id], onDelete: Cascade)
  
  content   String
  createdAt DateTime @default(now())
}
